{
    "manifest_version": 3,
    "name": "PropertyGuru Advanced Manager",
    "version": "1.0",
    "description": "Save, Manage, and screen properties locally.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.propertyguru.com.sg/*",
        "https://maps.googleapis.com/*",
        "https://generativelanguage.googleapis.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}